<h1 class='text-center'>Order <%= @order.id %></h1>
<% if current_admin? %>
<div class="card mx-auto" style="width: 25rem;">
  <div class="card-body">
    <h5 class="card-title text-center">Order for <%= @order.user.last_name %>, <%= @order.user.first_name %></h5>
    <p class="card-text">
      <p class='float-left'>Address:</p>
      <p class='float-right'><%= @order.user.address %></p>
    </p>
  </div>
</div>
<% end %>
<div class='text-center'>
  Status: <b><%= @order.status %></b> <%= if @order.status == ("completed" || "cancelled") then "at #{@order.updated_at}" end%>
</div>
<div class='text-center'>
  Created at: <b><%= @order.created_at %></b>
</div>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Item</th>
      <th scope="col">Price</th>
      <th scope="col">Quantity</th>
      <th scope="col">Subtotal</th>
    </tr>
  </thead>
  <tbody>
    <% @order.order_items.each do |order_item| %>
    <tr>
      <div id="order-<%= @order.id %>">
      <td><%= link_to "#{order_item.item.title}", item_path(order_item.item_id) %></td>
      <td><%= number_to_currency(order_item.price) %></td>
      <td><%= order_item.quantity %></td>
      <td><%= number_to_currency(order_item.price * order_item.quantity) %></td>
      <div>
    </tr>
    <% end %>
  <tr>
    <td></td>
    <td></td>
    <td></td>
    <td>Total: <%= @order.total_price %></td>
  </tr>
  </tbody>
</table>
