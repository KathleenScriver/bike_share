<h1 class='text-center'>All Items in Bike Shop</h1>

<%= link_to "Add New Item", new_admin_item_path, class: 'btn btn-info text-center' %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Item Name</th>
      <th scope="col">Image</th>
      <th scope="col">Description</th>
      <th scope="col">Status</th>
      <th scope="col">Options</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
  <div class ='item' id="item-<%= item.id %>">
    <tr>
      <td><%= item.title %></td>
      <td><%= image_tag(item.image, class: "card-img-top", alt: "Bike picture") %></td>
      <td><%= item.description %></td>
      <td><%= item.status %></td>
      <td><%= link_to "Edit", edit_admin_item_path(item), class: "btn btn-warning" %></td>
    </tr>
  </div>
  <% end %>
</table>
