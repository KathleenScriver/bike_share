<h1 class='text-center'>Create A New Trip</h1>

<div class="login-form">
  <%= form_for [:admin, @trip] do |f| %>
    <div class="form-group">
      <%= f.label :duration %>
      <%= f.text_field :duration %>
    </div>
    <div class="form-group">
      <%= f.label :start_date %>
      <%= f.date_field :start_date %>
    </div>
    <div class="form-group">
      <%= f.label :end_date %>
      <%= f.date_field :end_date %>
    </div>
    <div class="form-group">
      <%= f.label :bike_id %>
      <%= f.text_field :bike_id %>
    </div>
    <div class="form-group">
      <%= f.label :subscription_type %>
      <%= f.select :subscription_type, ['Subscriber', 'Customer'] %>
    </div>
    <div class="form-group">
      <%= f.label :zip_code %>
      <%= f.text_field :zip_code %>
    </div>
    <div class="form-group">
      <%= f.label :start_station_id %>
      <%= f.collection_select :start_station_id, @stations, :id, :name, prompt: true %>
    </div>
    <div class="form-group">
      <%= f.label :end_station_id %>
      <%= f.collection_select :end_station_id, @stations, :id, :name, prompt: true %>
    </div>
    <%= f.submit %>
  <% end %>
</div>
